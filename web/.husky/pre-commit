#!/bin/sh

files=$(git diff --cached --name-only)

api_modified=false
web_modified=false

for file in $files
do
  case "$file" in
    api/*.py)
      api_modified=true
      ;;
    web/*)
      web_modified=true
      ;;
  esac
done

if $api_modified; then
  echo "üîç Running Ruff linter on api module"

  uv run --project api --dev ruff check --fix ./api
  uv run --project api --dev ruff check ./api || status=$?
  status=${status:-0}

  if [ $status -ne 0 ]; then
    echo "‚ùå Ruff linter on api failed (exit $status)"
    echo "Please run: uv run --project api --dev ruff check --fix ./api"
    exit 1
  fi
fi

if $web_modified; then
  echo "üîç Running ESLint on web module"
  cd ./web || exit 1
  pnpm lint-staged || exit 1
  cd ../
fi
